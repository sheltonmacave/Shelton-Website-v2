<style>
  .hero-section {
    height: 100vh;
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7));
    z-index: 1;
  }
  
  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 10;
  }
  
  .divider {
    height: 1px;
    width: 150px;
    background-color: rgb(var(--color-main));
    margin: 3rem 0;
  }
  
  .contact-card {
    background-color: rgba(17, 17, 17, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }
  
  .contact-card:hover {
    background-color: rgba(var(--color-main), 0.1);
    border-color: rgba(var(--color-main), 0.3);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(var(--color-main), 0.15);
  }
  
  .card-text {
    word-break: break-word;
    overflow-wrap: break-word;
  }
  
  .arrow-icon {
    transition: transform 0.3s ease;
  }
  
  .contact-card:hover .arrow-icon {
    transform: translateX(5px);
    color: rgb(var(--color-main));
  }
  
  .tooltip {
    position: absolute;
    top: -2.5rem;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    background-color: rgba(var(--color-main), 0.9);
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    opacity: 0;
    pointer-events: none;
    transition: all 0.2s ease;
    white-space: nowrap;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }
  
  .tooltip:after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
    border-width: 5px 5px 0;
    border-style: solid;
    border-color: rgba(var(--color-main), 0.9) transparent transparent;
  }
  
  .contact-card:hover .tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  
  /* Form styles */
  input, textarea {
    background-color: rgba(0, 0, 0, 0.5) !important;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }
  
  input:focus, textarea:focus {
    box-shadow: 0 0 0 2px rgba(var(--color-main), 0.3);
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }
  
  .pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .hero-section {
      height: 80vh;
    }
  }
  
  /* Stars animation */
  .stars-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    opacity: 0.6;
    z-index: 1;
  }
  
  .star-1, .star-2, .star-3, .star-4, .star-5, .star-6 {
    position: absolute;
    width: 3px;
    height: 3px;
    background-color: white;
    border-radius: 50%;
    opacity: 0;
  }
  
  .star-1 {
    top: 20%;
    left: 30%;
    animation: star-animate 3s infinite ease-in-out 0.5s;
  }
  
  .star-2 {
    top: 30%;
    left: 70%;
    animation: star-animate 4s infinite ease-in-out 1s;
  }
  
  .star-3 {
    top: 70%;
    left: 20%;
    animation: star-animate 3.5s infinite ease-in-out 1.5s;
  }
  
  .star-4 {
    top: 80%;
    left: 80%;
    animation: star-animate 3s infinite ease-in-out 2s;
  }
  
  .star-5 {
    top: 45%;
    left: 45%;
    animation: star-animate 4s infinite ease-in-out 2.5s;
  }
  
  .star-6 {
    top: 60%;
    left: 10%;
    animation: star-animate 3s infinite ease-in-out 3s;
  }
  
  @keyframes star-animate {
    0%, 100% {
      opacity: 0;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(2);
    }
  }
  
  /* Console Cards Styles */
  .console-card {
    background-color: rgba(17, 17, 17, 0.7);
    backdrop-filter: blur(10px);
    border: 2px solid transparent;
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    box-shadow: 0 0 0 0 #000;
  }

  /* Inner shadow for normal state */
  .console-card:not(.expanded)::after {
    content: '';
    position: absolute;
    inset: 0;
    pointer-events: none;
    border-radius: 1rem;
    box-shadow: inset 0 0 24px 4px #006FCD33;
    opacity: 1;
    transition: box-shadow 0.3s, opacity 0.3s;
    z-index: 3;
  }
  .console-card.xbox:not(.expanded)::after {
    box-shadow: inset 0 0 24px 4px #107C1033;
  }
  .console-card.expanded::after {
    opacity: 0;
    box-shadow: none;
  }

  /* Particles for normal state */
  .console-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 2;
  }
  .console-particle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.7;
    animation: particle-move 4s linear infinite;
  }
  .console-card.playstation .console-particle {
    background: #006FCD;
  }
  .console-card.xbox .console-particle {
    background: #107C10;
  }
  @keyframes particle-move {
    0% { transform: translateY(0) scale(1); opacity: 0.7; }
    30% { opacity: 1; }
    50% { transform: translateY(-30px) scale(1.2); opacity: 0.8; }
    70% { opacity: 1; }
    100% { transform: translateY(0) scale(1); opacity: 0.7; }
  }
  
  .console-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  }
  
  .console-card.playstation:hover,
  .console-card.playstation.hover-preview {
    border-color: #006FCD;
    box-shadow: 0 15px 35px rgba(0, 111, 205, 0.3);
  }
  
  .console-card.xbox:hover,
  .console-card.xbox.hover-preview {
    border-color: #107C10;
    box-shadow: 0 15px 35px rgba(16, 124, 16, 0.3);
  }
  
  /* Borda leve no estado normal */
  .console-card.playstation {
    border-color: #006FCD33;
  }
  .console-card.xbox {
    border-color: #107C1033;
  }
  /* Remove borda colorida ao fechar (expanded já sobrescreve) */
  .console-card:not(.expanded).playstation {
    background-image: none;
  }
  .console-card:not(.expanded).xbox {
    background-image: none;
  }
  
  .console-logo {
    width: 120px;
    height: 120px;
    object-fit: contain;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
    z-index: 2;
    position: relative;
  }
  
  .console-id {
    color: white;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
    z-index: 2;
    position: relative;
  }
  
  .console-text {
    color: white;
    font-size: 1.1rem;
    line-height: 1.6;
    opacity: 0;
    transition: all 0.3s ease;
    padding: 0.5rem 0.5rem;
    position: relative;
    z-index: 2;
    text-align: center;
    display: none;
    max-width: 100%;
    transform: none;
  }
  .console-text::before,
  .console-text::after {
    display: none;
  }
  .console-card:hover .console-text,
  .console-card.hover-preview .console-text {
    opacity: 0.7;
    display: block;
    position: static;
    font-size: 1.2rem;
    padding: 0.5rem 0.5rem;
    max-width: 100%;
    transform: none;
  }
  .console-card.expanded .console-text {
    opacity: 1;
    font-size: 1.4rem;
    padding: 0.5rem 0.5rem;
    max-width: 100%;
    position: static;
    display: block;
    transform: none;
  }
  
  .console-card:hover .console-logo,
  .console-card:hover .console-id,
  .console-card.hover-preview .console-logo,
  .console-card.hover-preview .console-id {
    opacity: 0;
    transform: translateY(-20px);
  }
  
  .console-card:hover .console-text,
  .console-card.hover-preview .console-text {
    opacity: 0.7;
    display: block;
    position: static;
    font-size: 1.2rem;
    padding: 0.5rem 0.5rem;
    max-width: 100%;
    transform: none;
  }
  
  .console-card.playstation .console-text {
    color: #87CEEB;
  }
  
  .console-card.expanded .console-logo,
  .console-card.expanded .console-id {
    opacity: 0;
    transform: translateY(-20px);
  }
  
  .console-card.expanded .console-text {
    opacity: 1;
    font-size: 1.4rem;
    padding: 0.5rem 0.5rem;
    max-width: 100%;
    position: static;
    display: block;
    transform: none;
  }
  
  .console-card.expanded {
    padding: 2rem;
  }
  
  .console-card.expanded.playstation {
    border-color: #006FCD;
    box-shadow: 0 15px 35px rgba(0, 111, 205, 0.4);
    background-image: url('/images/pages/leftmatrix.jpeg');
  }
  
  .console-card.expanded.xbox {
    border-color: #107C10;
    box-shadow: 0 15px 35px rgba(16, 124, 16, 0.4);
    background-image: url('/images/pages/rightmatrix.jpeg');
  }
  
  .console-card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }
  .console-main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
</style>

