<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm') as HTMLFormElement | null;
    const formStatus = document.getElementById('formStatus');
    // Console cards functionality
    const consoleCards = document.querySelectorAll('.console-card');
    let currentlyExpandedCard: HTMLElement | null = null;
    const psAudio = document.getElementById('ps-audio') as HTMLAudioElement | null;
    const xboxAudio = document.getElementById('xbox-audio') as HTMLAudioElement | null;

    // Helper: add particles to each card
    function createParticles(card: HTMLElement, color: string) {
      const container = card.querySelector('.console-particles');
      if (!container) return;
      container.innerHTML = '';
      if (card.classList.contains('expanded')) return;
      // 8 particles, random positions
      for (let i = 0; i < 8; i++) {
        const p = document.createElement('div');
        p.className = 'console-particle';
        p.style.width = `${8 + Math.random() * 8}px`;
        p.style.height = p.style.width;
        p.style.left = `${10 + Math.random() * 80}%`;
        p.style.top = `${10 + Math.random() * 80}%`;
        p.style.animationDelay = `${Math.random() * 4}s`;
        container.appendChild(p);
      }
    }

    function updateParticles() {
      consoleCards.forEach(card => {
        if (card.classList.contains('playstation')) {
          createParticles(card as HTMLElement, '#006FCD');
        } else if (card.classList.contains('xbox')) {
          createParticles(card as HTMLElement, '#107C10');
        }
      });
    }

    // Ajustar exibição para mostrar apenas o conteúdo correto
    const updateCardContent = () => {
      document.querySelectorAll('.console-card').forEach(card => {
        const main = card.querySelector('.console-main') as HTMLElement | null;
        const text = card.querySelector('.console-text') as HTMLElement | null;
        if (card.classList.contains('expanded') || card.classList.contains('hover-preview')) {
          if (main) main.style.display = 'none';
          if (text) text.style.display = 'block';
        } else {
          if (main) main.style.display = '';
          if (text) text.style.display = 'none';
        }
      });
      updateParticles();
    };

    // Toggle logic
    consoleCards.forEach(card => {
      card.addEventListener('click', (e) => {
        // Se já está expandido, fechar e tocar som
        if (card.classList.contains('expanded')) {
          card.classList.remove('expanded');
          if (card.classList.contains('playstation') && psAudio) { psAudio.currentTime = 0; psAudio.play(); }
          if (card.classList.contains('xbox') && xboxAudio) { xboxAudio.currentTime = 0; xboxAudio.play(); }
          currentlyExpandedCard = null;
        } else {
          // Fechar outro aberto
          if (currentlyExpandedCard) {
            currentlyExpandedCard.classList.remove('expanded');
            // Tocar som ao fechar outro
            if (currentlyExpandedCard.classList.contains('playstation') && psAudio) { psAudio.currentTime = 0; psAudio.play(); }
            if (currentlyExpandedCard.classList.contains('xbox') && xboxAudio) { xboxAudio.currentTime = 0; xboxAudio.play(); }
          }
          card.classList.add('expanded');
          currentlyExpandedCard = card as HTMLElement;
        }
        updateCardContent();
      });
      // Hover preview
      card.addEventListener('mouseenter', () => {
        if (currentlyExpandedCard !== card) {
          card.classList.add('hover-preview');
          updateCardContent();
        }
      });
      card.addEventListener('mouseleave', () => {
        if (currentlyExpandedCard !== card) {
          card.classList.remove('hover-preview');
          updateCardContent();
        }
      });
    });
    // Estado inicial
    updateCardContent();

    // Submit custom para Formspree sem recarregar
    if (contactForm && formStatus) {
      contactForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        formStatus.classList.remove('hidden', 'text-red-500', 'text-green-500');
        formStatus.classList.add('text-main', 'block');
        formStatus.innerHTML = `<span class="text-white">Enviando mensagem...</span>`;
        const formData = new FormData(contactForm);
        try {
          const response = await fetch('https://formspree.io/f/movkqdgz', {
            method: 'POST',
            body: formData,
            headers: { 'Accept': 'application/json' }
          });
          if (response.ok) {
            formStatus.innerHTML = `<span class="text-green-500">Mensagem enviada com sucesso! Obrigado pelo contacto.</span>`;
            formStatus.classList.remove('text-main');
            formStatus.classList.add('text-green-500');
            contactForm.reset();
            setTimeout(() => { formStatus.classList.add('hidden'); }, 5000);
          } else {
            throw new Error('Erro ao enviar mensagem');
          }
        } catch (err) {
          formStatus.innerHTML = `<span class="text-red-500">Ocorreu um erro ao enviar a mensagem. Por favor tente novamente mais tarde.</span>`;
          formStatus.classList.remove('text-main');
          formStatus.classList.add('text-red-500');
        }
      });
    }
  });
</script>
