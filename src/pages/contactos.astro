---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Contactos - Shelton Macave" description="Entre em contacto com Shelton Macave para projetos, colaborações ou oportunidades profissionais.">
  <div class="container mx-auto px-6 md:px-16 py-12">
    <h1 class="text-4xl md:text-5xl font-grotesk text-main text-center mb-12">Entre em Contacto</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Informações de Contacto -->
      <div class="bg-black/20 p-8 rounded-lg">
        <h2 class="text-2xl font-grotesk text-main mb-6">Informações de Contacto</h2>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="bg-main/10 p-3 rounded-lg mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-main" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-grotesk text-main">Email</h3>
              <a href="mailto:contacto@sheltonmacave.com" class="text-second hover:text-main transition-colors">contacto@sheltonmacave.com</a>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-main/10 p-3 rounded-lg mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-main" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-grotesk text-main">Telefone</h3>
              <a href="tel:+258841234567" class="text-second hover:text-main transition-colors">+258 84 123 4567</a>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-main/10 p-3 rounded-lg mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-main" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-grotesk text-main">Localização</h3>
              <p class="text-second">Avenida Julius Nyerere, Maputo, Moçambique</p>
            </div>
          </div>
        </div>
        
        <div class="mt-10">
          <h3 class="text-xl font-grotesk text-main mb-4">Redes Sociais</h3>
          
          <div class="flex space-x-4">
            <a href="#" class="bg-main/10 p-3 rounded-full hover:bg-main/20 transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-main h-5 w-5">
                <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/>
              </svg>
            </a>
            
            <a href="#" class="bg-main/10 p-3 rounded-full hover:bg-main/20 transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-main h-5 w-5">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            
            <a href="#" class="bg-main/10 p-3 rounded-full hover:bg-main/20 transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-main h-5 w-5">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
            
            <a href="#" class="bg-main/10 p-3 rounded-full hover:bg-main/20 transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-main h-5 w-5">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Formulário de Contacto -->
      <div>
        <h2 class="text-2xl font-grotesk text-main mb-6">Envie uma Mensagem</h2>
        
        <form id="contactForm" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-second mb-2">Nome</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 bg-black/30 border border-second/20 rounded-lg focus:border-main focus:outline-none focus:ring-1 focus:ring-main text-white"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-second mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 bg-black/30 border border-second/20 rounded-lg focus:border-main focus:outline-none focus:ring-1 focus:ring-main text-white"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-second mb-2">Assunto</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              class="w-full px-4 py-3 bg-black/30 border border-second/20 rounded-lg focus:border-main focus:outline-none focus:ring-1 focus:ring-main text-white"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-second mb-2">Mensagem</label>
            <textarea 
              id="message" 
              name="message" 
              rows="6" 
              class="w-full px-4 py-3 bg-black/30 border border-second/20 rounded-lg focus:border-main focus:outline-none focus:ring-1 focus:ring-main text-white resize-none"
              required
            ></textarea>
          </div>
          
          <div class="flex justify-end">
            <button 
              type="submit" 
              class="bg-main text-white px-8 py-3 rounded-lg hover:bg-main/90 transition-all transform hover:scale-105 focus:outline-none"
            >
              Enviar Mensagem
            </button>
          </div>
        </form>
        
        <!-- Mensagem de sucesso -->
        <div id="successMessage" class="hidden mt-6 p-4 bg-green-900/30 border border-green-500/30 rounded-lg">
          <p class="text-green-300">Sua mensagem foi enviada com sucesso! Entraremos em contacto em breve.</p>
        </div>
      </div>
    </div>
  </div>
</PageLayout>

<script>
  import { gsap } from 'gsap';
  
  document.addEventListener('DOMContentLoaded', () => {
    // Animações
    gsap.from('h1', { 
      opacity: 0, 
      y: -30,
      duration: 0.8,
      ease: 'power2.out'
    });
    
    gsap.from('.flex.items-start', { 
      opacity: 0, 
      x: -30,
      stagger: 0.2,
      duration: 0.5,
      delay: 0.3,
      ease: 'power2.out'
    });
    
    gsap.from('form > *', { 
      opacity: 0, 
      y: 20,
      stagger: 0.1,
      duration: 0.5,
      delay: 0.3,
      ease: 'power2.out'
    });
    
    // Form submission
    const contactForm = document.getElementById('contactForm');
    const successMessage = document.getElementById('successMessage');
    
    if (contactForm && successMessage) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Simular envio do formulário
        contactForm.classList.add('opacity-50', 'pointer-events-none');
        
        setTimeout(() => {
          contactForm.classList.remove('opacity-50', 'pointer-events-none');
          (contactForm as HTMLFormElement).reset();
          
          successMessage.classList.remove('hidden');
          gsap.from(successMessage, {
            opacity: 0,
            y: -10,
            duration: 0.4
          });
          
          setTimeout(() => {
            gsap.to(successMessage, {
              opacity: 0,
              y: -10,
              duration: 0.4,
              onComplete: () => {
                successMessage.classList.add('hidden');
                successMessage.style.opacity = '1';
                successMessage.style.transform = '';
              }
            });
          }, 5000);
        }, 1500);
      });
    }
  });
</script>