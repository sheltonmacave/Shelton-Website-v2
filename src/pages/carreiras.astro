---
import PageLayout from '../layouts/PageLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { ComboboxCareer } from '../components/ui/combobox-career.jsx';
---

<style>
  .hero-section {
    height: 100vh;
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7));
    z-index: 1;
  }
  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 10;
  }
  .stars-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    opacity: 0.6;
    z-index: 1;
  }
  .star-1, .star-2, .star-3, .star-4, .star-5, .star-6 {
    position: absolute;
    width: 3px;
    height: 3px;
    background-color: white;
    border-radius: 50%;
    opacity: 0;
  }
  .star-1 { top: 20%; left: 30%; animation: star-animate 3s infinite ease-in-out 0.5s; }
  .star-2 { top: 30%; left: 70%; animation: star-animate 4s infinite ease-in-out 1s; }
  .star-3 { top: 70%; left: 20%; animation: star-animate 3.5s infinite ease-in-out 1.5s; }
  .star-4 { top: 80%; left: 80%; animation: star-animate 3s infinite ease-in-out 2s; }
  .star-5 { top: 45%; left: 45%; animation: star-animate 4s infinite ease-in-out 2.5s; }
  .star-6 { top: 60%; left: 10%; animation: star-animate 3s infinite ease-in-out 3s; }
  @keyframes star-animate {
    0%, 100% { opacity: 0; transform: scale(1); }
    50% { opacity: 1; transform: scale(2); }
  }
</style>

<PageLayout title="Carreiras">
  <div class="bg-background min-h-screen">
    <section class="hero-section" style="background-image: url('/images/pages/galeria.jpg'); background-size: cover; background-position: center; position: relative;">
      <div class="absolute inset-0 overflow-hidden z-0">
        <div class="stars-container">
          <div class="star-1"></div>
          <div class="star-2"></div>
          <div class="star-3"></div>
          <div class="star-4"></div>
          <div class="star-5"></div>
          <div class="star-6"></div>
        </div>
      </div>
      <div class="container mx-auto px-6 text-center z-10 relative">
        <div class="title-container">
          <h1 class="font-grotesk text-main mt-10 text-5xl sm:text-7xl md:text-8xl lg:text-9xl tracking-wider">CARREIRAS</h1>
          <div class="h-0.5 w-24 md:w-32 bg-main mt-12 mx-auto"></div>
        </div>
        <p class="text-white text-xl md:text-2xl max-w-2xl mx-auto mb-12 leading-relaxed">
          Descubra oportunidades e caminhos para sua carreira.
        </p>
        <div class="flex justify-center mb-16">
          <ComboboxCareer client:only="react" />
        </div>
        <div class="absolute left-1/2 animate-bounce" style="bottom: -5rem; transform: translateX(-50%);">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="rgb(var(--color-main))" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6 9 6 6 6-6"/>
          </svg>
        </div>
      </div>
    </section>
  </div>
</PageLayout>
