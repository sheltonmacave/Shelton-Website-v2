---
import Layout from './Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Site pessoal do Shelton Macave, desenvolvedor e IT profissional" } = Astro.props;
---

<Layout title={title}>
  <meta slot="head" name="description" content={description} />
  <div class="min-h-screen flex flex-col">
    <div style="position:fixed;top:0;left:0;width:100%;z-index:50;pointer-events:auto;">
      <Navbar />
    </div>
    <main class="flex-grow relative">
      <slot />
    </main>
    <Footer />
  </div>
</Layout>
  </body>
</html>